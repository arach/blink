{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "A modern, fast notes application built with Tauri, React, and TypeScript",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "shortDescription": "Modern notes application",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "productName": "Tauri Notes App",
  "version": "0.1.0",
  "identifier": "com.taurinotesapp.dev",
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:window:allow-start-dragging",
            "core:window:allow-set-always-on-top",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-set-focus",
            "core:window:allow-is-visible",
            "core:window:allow-center",
            "core:window:allow-is-always-on-top",
            "core:window:allow-minimize",
            "core:webview:allow-create-webview-window"
          ]
        },
        {
          "identifier": "note-window-capability",
          "description": "Capability for detached note windows",
          "windows": ["note-*"],
          "permissions": [
            "core:window:allow-start-dragging",
            "core:window:allow-set-always-on-top",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-set-focus",
            "core:window:allow-is-visible"
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "Tauri Notes App",
        "width": 1000,
        "height": 700,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": false,
        "titleBarStyle": "Overlay",
        "visible": true,
        "center": true
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}